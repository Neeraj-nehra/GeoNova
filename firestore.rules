/**
 * @fileoverview Firestore Security Rules for the GeoNova Landslide Guardian system.
 *
 * Core Philosophy:
 * This ruleset enforces a combination of user-ownership and role-based access control.
 * User data is strictly private, while landslide data has more open read access, with
 * restricted write access based on admin roles or ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the user themselves.
 * - /roles_admin/{userId}: Presence of document indicates admin role for the user.
 * - /landslidePoints/{landslidePointId}: Stores landslide observation points, publicly readable but write-protected except for admins.
 * - /zones/{zoneId}: Stores geographical zones, write-protected except for admins.
 * - /alerts/{alertId}: Stores alerts, publicly readable, write-protected except for admins.
 * - /environmentalData/{environmentalDataId}: Stores environmental data, publicly readable, write-protected.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy.
 * - Admin role is determined by the existence of a document in /roles_admin/{userId}.
 * - Environmental data is considered public and read-only.
 *
 * Denormalization for Authorization:
 * - Admin role is determined by the existence of a document in `/roles_admin/{userId}`, avoiding the need to read the user document to determine its `role` field.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is an admin.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) - User with matching ID can create their profile.
     * @allow (get, update, delete, list) - User with matching ID can access their profile.
     * @deny (create) - User cannot create a profile with an ID that doesn't match their auth ID.
     * @deny (get, update, delete, list) - User cannot access another user's profile.
     * @principle Enforces strict user-ownership.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Rules for admin roles.
     * @path /roles_admin/{userId}
     * @allow (create) - Only an admin can grant admin roles.
     * @allow (get, delete) - Only an admin can view or revoke admin roles.
     * @deny (create, get, delete) - Non-admins cannot manage admin roles.
     * @principle Enforces strict admin-only role management.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && isAdmin();
      allow list: if false;
      allow create: if isSignedIn() && isAdmin();
      allow update: if false;
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Rules for landslide observation points.
     * @path /landslidePoints/{landslidePointId}
     * @allow (get, list) - Anyone can read landslide points.
     * @allow (create, update, delete) - Only admins can create, update, or delete landslide points.
     * @deny (create, update, delete) - Non-admins cannot modify landslide points.
     * @principle Allows public read access with restricted write access.
     */
    match /landslidePoints/{landslidePointId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Rules for geographical zones.
     * @path /zones/{zoneId}
     * @allow (get, list) - Anyone can read zones.
     * @allow (create, update, delete) - Only admins can create, update, or delete zones.
     * @deny (create, update, delete) - Non-admins cannot modify zones.
     * @principle Allows public read access with restricted write access.
     */
    match /zones/{zoneId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Rules for alerts.
     * @path /alerts/{alertId}
     * @allow (get, list) - Anyone can read alerts.
     * @allow (create, update, delete) - Only admins can create, update, or delete alerts.
     * @deny (create, update, delete) - Non-admins cannot modify alerts.
     * @principle Allows public read access with restricted write access.
     */
    match /alerts/{alertId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Rules for environmental data.
     * @path /environmentalData/{environmentalDataId}
     * @allow (get, list) - Anyone can read environmental data.
     * @deny (create, update, delete) - No one can create, update, or delete environmental data.
     * @principle Allows public read access with no write access.
     */
    match /environmentalData/{environmentalDataId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}